<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.ui.home.view.MainActivity">
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/brn_get_movies"
    android:text="Get movies"
    android:textAllCaps="false"
android:layout_margin="16dp"    />
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/brn_get_movies"
    android:id="@+id/btn_get_detail_movie"
    android:textAllCaps="false"
    android:text="get movie details"
    android:layout_margin="16dp"/>
    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/grid"
        app:layout_constraintTop_toBottomOf="@+id/btn_get_detail_movie"
        android:columnWidth="120dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:layout_marginLeft="10dp"


        ></GridView>


</android.support.constraint.ConstraintLayout>
